<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.jkutkut.hr_app.controller.ListController">
   <children>
      <TableView fx:id="table" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="100.0">
         <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="firstNameColumn" text="First Name" />
            <TableColumn fx:id="lastNameColumn" text="Last Name" />
            <TableColumn fx:id="emailColumn" text="Email" />
            <TableColumn fx:id="phoneColumn" text="Phone" />
            <TableColumn fx:id="hireDateColumn" text="Hire Date" />
            <TableColumn fx:id="jobIdColumn" text="Job ID" />
            <TableColumn fx:id="salaryColumn" text="Salary" />
            <TableColumn fx:id="commissionPctColumn" text="Commission PCT" />
            <TableColumn fx:id="managerIdColumn" text="Manager ID" />
            <TableColumn fx:id="departmentIdColumn" text="Department ID" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button mnemonicParsing="false" text="Search All" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="40.0" onAction="#handleSearchAll" />
      <Button mnemonicParsing="false" text="Edit" AnchorPane.leftAnchor="200.0" AnchorPane.topAnchor="40.0" onAction="#handleEdit"/>
      <Button mnemonicParsing="false" text="Delete" AnchorPane.leftAnchor="300.0" AnchorPane.topAnchor="40.0" onAction="#handleDelete"/>

      <SplitMenuButton fx:id="splitMenu" mnemonicParsing="false" text="SplitMenuButton" AnchorPane.rightAnchor="400.0" AnchorPane.topAnchor="40.0">
         <items>
            <MenuItem mnemonicParsing="false" text="Id" />
            <MenuItem mnemonicParsing="false" text="First Name" />
            <MenuItem mnemonicParsing="false" text="Last Name" />
            <MenuItem mnemonicParsing="false" text="Email" />
            <MenuItem mnemonicParsing="false" text="Phone" />
            <MenuItem mnemonicParsing="false" text="Hire Date" />
            <MenuItem mnemonicParsing="false" text="Job ID" />
            <MenuItem mnemonicParsing="false" text="Salary" />
            <MenuItem mnemonicParsing="false" text="Commission PCT" />
            <MenuItem mnemonicParsing="false" text="Manager ID" />
            <MenuItem mnemonicParsing="false" text="Department ID" />
         </items>
      </SplitMenuButton>
      <TextField fx:id="txtfSearch" layoutX="599.0" layoutY="40.0" AnchorPane.rightAnchor="180.0" AnchorPane.topAnchor="40.0" />
      <Button fx:id="btnSearch" mnemonicParsing="false" text="Search" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="40.0" onAction="#handleSearch"/>
   </children>
</AnchorPane>
